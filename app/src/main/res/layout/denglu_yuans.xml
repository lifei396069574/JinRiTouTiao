<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/denglu_fan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_discover_normal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="原生注册"
            android:textSize="20sp"/>

    </RelativeLayout>

    <View
        android:layout_below="@id/re"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorBlack"/>


    <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <EditText
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@+id/denglu_name"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_tip_mobile"
                android:hint="请输入账号"
                />
            <EditText
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@+id/denglu_pwd"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_tip_pwd"
                android:password="true"
                android:hint="请输入密码"
                />
            <EditText
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:gravity="center"
                android:id="@+id/denglu_pwd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_tip_pwd"
                android:hint="请再次输入密码"
                android:password="true"
                />
            <EditText
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@+id/denglu_email"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_tip_username"
                android:hint="请输入邮箱"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/denglu_zhu"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="注册"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/button_landshape"
                    />
                <Button
                    android:id="@+id/denglu_deng"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="登陆"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/button_landshape"
                    />
            </LinearLayout>
        </LinearLayout>




</RelativeLayout>