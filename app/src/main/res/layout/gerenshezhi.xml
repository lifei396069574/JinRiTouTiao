<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="设置个人信息"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text_gerenshezhi_wancheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" android:layout_centerVertical="true"
            android:text="完成"/>
    </RelativeLayout>


    <view.MyImageView
        android:id="@+id/button_gerenshezhi_touxiang"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:src="@mipmap/ic_default_avatar_big_normal"/>


        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:paddingRight="10dp"
                android:src="@mipmap/ic_tip_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/text_geren_nicheng"
                android:background="@null"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:hint="昵称"/>

            <ImageView
                android:layout_gravity="right"
                android:visibility="invisible"
                android:src="@mipmap/alert_image_cancel_btn_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>
    <View
        android:layout_gravity="center"
        android:background="@color/colorBlack"
        android:paddingBottom="30dp"
        android:layout_width="200dp"
        android:layout_height="0.1dp"/>
</LinearLayout>